{
    "beautify.config": {
        "indent_size": 2,
        "end_with_newline": true,
        "indent_char": " ",
        "css": {
            "indent_size": 2
        },
        "html": {
            "wrap_attributes": "auto"
        }
    },
    "beautify.ignore": [
        "**/**.js",
        "**/**.ts",
        "**/**.json"
    ],
    "beautify.language": {
        "html": ["html"],
        "css": ["css", "scss"],
        "js": []
    },
    "emmet.includeLanguages": {
        "javascript": "html",
        "markdown": "html",
        "typescript": "html"
    },
    "cSpell.language": "en,es",
    "cSpell.userWords": [],
    "editor.autoIndent": true,
    "editor.formatOnPaste": false,
    "editor.formatOnSave": true,
    "editor.letterSpacing": 1,
    "editor.tabSize": 2,
    "editor.renderWhitespace": "boundary",
    "editor.wordWrap": "off",
    "eslint.enable": true,
    "eslint.options": {
        "env": {
            "browser": true,
            "commonjs": true,
            "es6": true
        },
        "extends": ["eslint:recommended"],
        "parserOptions": {
            "sourceType": "module"
        },
        "rules": {
            "eqeqeq": [
                "error",
                "always",
                {
                    "null": "ignore"
                }
            ],
            "indent": [
                "error",
                2, {
                    "SwitchCase": 0
                }
            ],
            "no-console": "off",
            "no-case-declarations": "error",
            "quotes": [
                2,
                "single", {
                    "avoidEscape": false,
                    "allowTemplateLiterals": true
                }
            ]
        }
    },
    "files.exclude": {
        "**/*.js.map": {
            "when": "$(basename)"
        },
        "**/node_modules": true
    },
    "git.autofetch": true,
    "javascript.suggest.autoImports": true,
    "javascript.validate.enable": false,
    "javascript.format.enable": false,
    "prettier.arrowParens": "always",
    "prettier.eslintIntegration": true,
    "prettier.printWidth": 120,
    "prettier.semi": true,
    "prettier.singleQuote": true,
    "prettier.trailingComma": "es5",
    "prettier.tabWidth": 2,
    "prettier.useTabs": false,
    "stylelint.enable": true,
    "css.validate": false,
    "less.validate": false,
    "scss.validate": false,
    "todo-tree.tags": [
        "TODO",
        "FIXME"
    ],
}